<h1>Your Transactions</h1>

<% if @transactions.any? %>
  <table>
    <thead>
      <tr>
        <th>Type</th>
        <th>Symbol</th>
        <th>Shares</th>
        <th>Price</th>
        <th>Total</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |t| %>
        <tr>
          <td><%= t.transaction_type.capitalize %></td>
          <td><%= t.symbol %></td>
          <td><%= t.shares %></td>
          <td>$<%= '%.2f' % t.price %></td>
          <td>$<%= '%.2f' % (t.price * t.shares) %></td>
          <td><%= t.created_at.strftime("%b %d, %Y %I:%M %p") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No transactions yet.</p>
<% end %>
