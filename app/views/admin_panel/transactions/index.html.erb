<h1>All User Transactions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User Email</th>
      <th>Type</th>
      <th>Symbol</th>
      <th>Shares</th>
      <th>Price</th>
      <th>Total</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.user.email %></td>
        <td><%= transaction.transaction_type.capitalize %></td>
        <td><%= transaction.symbol %></td>
        <td><%= transaction.shares %></td>
        <td>$<%= '%.2f' % transaction.price %></td>
        <td>$<%= '%.2f' % (transaction.shares * transaction.price) %></td>
        <td><%= transaction.created_at.strftime("%b %d, %Y %I:%M %p") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
